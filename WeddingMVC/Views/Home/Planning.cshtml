                    </h3>
                </div>
            </div>

            @{
                foreach (var item in photographers?.Skip(1))
                {
                    if (item.Profession == "ფოტოგრაფი")
                    {
                        var picturename = item.ProfilePicture + ".png";
                        <div class="ms-slide" data-delay="3" data-fill-mode="fill">
                            <img src="/Content/img/desinerpictures/@picturename" alt="profile" title="" data-src="/Content/img/desinerpictures/@picturename">
                            <div class="ms-info photog-description">
                                <h3 style="text-align: center;">
                                    <a href="@Url.Action("Photographer","Home",new {user = item.ProfilePicture})"> @item.Name </a>
                                </h3>
                            </div>
                        </div>
                    }
                }
            }


