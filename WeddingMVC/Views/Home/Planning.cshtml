<section class="photographer">

    <div class="container-fluid photog-txt">
        <h2> Photographer </h2>
        <hr class="line1">

    </div>
    @{
        var firstuser = photographers.FirstOrDefault(x => x.Profession == "ფოტოგრაფი")?.ProfilePicture + ".png";

    }
    <div class="ms-staff-carousel ms-round g-mt-50">
        <div id="masterslider" class="master-slider ms-skin-default">
            <div class="ms-slide" data-delay="3" data-fill-mode="fill">
                <img src="/Content/img/desinerpictures/@firstuser" ) alt="pofile" title="" data-src="/Content/img/desinerpictures/@firstuser" />
                <div class="ms-info photog-description">
                    <h3 style="text-align: center;">
