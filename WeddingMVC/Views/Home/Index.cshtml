@using WeddingMVC.Models
@model IEnumerable<Slider>

@{
    ViewBag.Title = "Index";
    var user = Session["logedInUser"] as User;
}

<section>

    <h2 class="tracking-in-expand-fwd carousel-txt">
        wedding plans
        <br> best day in your life
    </h2>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">
            @{
                if (Model.Count() == 0)
                {
                    <div class="carousel-item active">
                        <div class="d-block img-fluid carousel-img" style="background-image: url('/Content/img/we.jpg')"> </div>
                    </div>
                }
                else
                {
                    if (@Model.Count() == 1)
                    {
                        string firstImage = @Model.FirstOrDefault().Name + ".png";
                        <div class="carousel-item active">
                            <div class="d-block img-fluid carousel-img" style="background-image: url('/Content/Upload/@firstImage')"> </div>
                        </div>
                    }
                    else
                    {
                        string firstImage = @Model.FirstOrDefault().Name + ".png";
                        <div class="carousel-item active">
                            <div class="d-block img-fluid carousel-img" style="background-image: url('/Content/Upload/@firstImage')"> </div>
                        </div>
                        foreach (var item in @Model.Skip(1))
                        {
                            <div class="carousel-item">
                                <div class="d-block img-fluid carousel-img" style="background-image: url('/Content/Upload/@(item.Name+".png")')"> </div>
                            </div>
                        }
                    }
                }
                
            }
        </div>


        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>






<section>

    <div class="container">
        <div class="text-center wed-text">
            <img class="infinite mt-3" src="~/Content/img/infinite.png" alt="123">

            <p>
                Getting married is the boldest and most idealistic thing that most of us will ever do. Planning a wedding involves endless
                details, we want to help and give you many ideas about this gorgeous day. use our planning instruction.
            </p>

        </div>
    </div>

</section>



<section>
    <div class="container-fluid">
        <div class="plan-button text-center">
            <h3>
                <a href="planning.html"> plan now </a>
            </h3>
        </div>
    </div>
</section>

