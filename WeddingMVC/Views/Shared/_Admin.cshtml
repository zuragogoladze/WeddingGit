@using WeddingMVC.Models

@{
    var user = Session["logedInUser"] as User;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title> AdminPanel </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/css/bootstrap-reboot.min.css" rel="stylesheet" />

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-grid.min.css" rel="stylesheet" />
    <link href="~/Content/css/jquery.fancybox.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/fonts.css" rel="stylesheet" />
    <link href="~/Content/css/Admin/AdminStyle.css" rel="stylesheet" />

</head>
<body>
    <header>
        <div id="mySidenav" class="sidenav">
            <p style="color: #818181; font-size: 25px;">Hello @(user?.Name)</p>
            <a href="javascript:void(0)" class="closebtn" id="closeNav">&times;</a>
            <a href="@Url.Action("AddPicture","Admin")">სურათის დამატება</a>
            <a href="@Url.Action("ManagePictures", "Admin")">სლაიდერის მართვა</a>
            <a href="@Url.Action("AddPhotographer", "Admin")">ფოტოგრაფის დამატება</a>
            @{
                if (user?.Role == 100)
                {
                    <a href="@Url.Action("Register", "Account")">მომხმარებლის რეგისტრაცია</a>
                }

            }
            <a href="@Url.Action("Logout", "Admin")">გამოსვლა</a>
        </div>
        <span style="font-size: 30px; cursor: pointer" id="openNav">&#9776;</span>
    </header>
    @RenderBody()
    <footer></footer>
    <script src="/Content/js/jquery-3.3.1.js"></script>
    <script src="/Content/js/jquery.fancybox.min.js"></script>
    <script src="/Content/js/isotope-v3.0.5.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="~/Scripts/Admin/AdminJS.js"></script>
</body>
</html>
